{
  "platform": "make",
  "name": "statsite",
  "owner": [
    "nathan.herald@microsoft.com"
  ],
  "repos": {
    "/opt/statsite": {
      "url": "https://github.com/armon/statsite.git",
      "sha": "v1.7.1"
    }
  },
  "copy_source": true,
  "compile": [
    "cd /opt/statsite/ && make && cp ./statsite /opt/app/",
    "mkdir /opt/app/sinks && cp /opt/statsite/sinks/* /opt/app/sinks/"
  ],
  "processes": {
    "statsd": {
      "cpu": 0,
      "memory": 0,
      "chdir": "/opt/app",
      "run": "./statsite -f statsite.d/statsite.ini"
    }
  }
}
