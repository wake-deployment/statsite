{
  "platform": "make",
  "name": "statsite",
  "owner": [
    "nathan.herald@microsoft.com"
  ],
  "repos": {
    "/opt/src": {
      "url": "https://github.com/armon/statsite.git",
      "sha": "v1.7.1"
    }
  },
  "compile": [
    "cd /opt/src/ && make",
    "cp /opt/src/statsite /opt/app/",
    "mkdir /opt/app/sinks",
    "cp /opt/src/sinks/* /opt/app/sinks/"
  ],
  "processes": {
    "statsd": {
      "cpu": 0,
      "memory": 0,
      "chdir": "/opt/app",
      "run": "./statsite -f statsite.ini"
    }
  }
}
